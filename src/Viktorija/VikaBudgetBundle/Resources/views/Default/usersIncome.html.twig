{% extends 'ViktorijaVikaBudgetBundle:Default:meniu.html.twig' %}
{%  block title %} {{ parent() }}AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAa {% endblock %}



{% block content %}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-9">
            {% for incomeType in income %}
                <div class="col-md-4 col-sm-6 col-xs-12">

                    <form class="IncomeForm" action="#">
                        <a href="http://www.balsas.lt" class="incomeType"> {{ incomeType.incometype }} :</a>
                        <div class="inputbuttonimage">
                            <img class="incomeimage" src="{{ asset ('bundles/viktorijavikabudget/images/income_images/' ~ incomeType.picture ) }}" alt="Photo of schoolbus!" />
                            <div class="enterprice">
                                <input type="hidden" name="incomeId" class="incomeId" value="{{ incomeType.id }}" />
                                <input type="number" name="price" class="inputform" value="" min="0" step="0.01" />
                                <input class="addButton plius" type="submit" value="Send" />
                            </div>
                        </div>

                        <div class="outputBlock" >
                            Total this week: <output class="weekOutput"> {{ incomeType.totalthisweek }} </output>
                            <br>
                            Total this month:  <output class="monthOutput">   {{ incomeType.totalthismonth }}</output>

                            {#Day: {{ expense.weekday }}#}
                        </div>
                    </form>
                </div>
            {% endfor %}

        </div>


    </div>

</div>
{%  endblock %}